/**index.wxss**/

page {
  background: #ededed;
}

.getUserInfo {
  position: absolute;
  top: 200rpx;
}

.bg {
  background: #ededed;
}

.text {
  font-size: 28rpx;
  letter-spacing: 0rpx;
  color: #bbb;
  position: absolute;
  top: 50vh;
  left: 45vw;
}

.buttons {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 120rpx;
}

.button {
  width: 280rpx;
  height: 112rpx;
  background-color: #fff;
  border-radius: 56px;
}

.join-activity {
  color: #000;
  border: solid 1rpx #bbb;
  margin-left: 32rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
}

.create-activity {
  background-color: #f7c429;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-activity image {
  width: 24rpx;
  height: 24rpx;
}

.create-activity text {
  font-size: 28rpx;
  font-weight: bolder;
}

.img-container {
  width: 64rpx;
  height: 64rpx;
  background: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
}

.list-container {
  width: 100%;
  height: 100vh;
}

.list-item {
  height: 344rpx;
  width: 100%;
  background: #fff;
  position: relative;
}

.item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.activity-name {
  font-weight: bolder;
  font-size: 48rpx;
  margin-top: 56rpx;
  margin-left: 31rpx;
}

.activity-money {
  color: #000;
  font-size: 48rpx;
  font-weight: bolder;
  margin-top: 60rpx;
  margin-right: 31rpx;
}

.activity-underway {
  font-size: 28rpx;
  color: #f7c429;
  margin-left: 15rpx;
  margin-top: 40rpx;
}

.activity-underway-end {
  font-size: 28rpx;
  color: #bbbbbb;
  margin-left: 15rpx;
  margin-top: 40rpx;
  font-weight: normal;
}

.activity-sum {
  font-size: 28rpx;
  color: #bbb;
  margin-right: 32rpx;
  margin-top: 40rpx;
}

.item-headimgs {
  margin-left: 16rpx;
  margin-top: 40rpx;
}

.headimgs {
  width: 48rpx;
  height: 48rpx;
  background: #dfdfdf;
  margin-left: 16rpx;
  border-radius: 8rpx;
}

.line {
  width: 100%;
  height: 16rpx;
  background: #ededed;
  position: absolute;
  bottom: 0rpx;
}
