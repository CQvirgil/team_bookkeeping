.container {
  height: 98vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background: #fff;
  padding: 0 32rpx;
}

.dialog-content {
  width: 100%;
  position: absolute;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  bottom: -98vh;
}

.fill-width {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.text-bolder {
  text-align: center;
}

.text-bolder {
  font-size: 28rpx;
  font-weight: bolder;
}

.text {
  font-size: 28rpx;
}

.dialog-top text {
  margin-top: 39rpx;
}

.text-golden {
  color: #f7c429;
}

.dialog-bottom {
  width: 750rpx;
  height: 112rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
}

.dialog-bottom checkbox {
  margin-left: 32rpx;
}

.money-count {
  margin-left: 23rpx;
  margin-right: 32rpx;
}

.list {
  width: 100%;
  height: 80vh;
  margin-top: 32rpx;
}


.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 56rpx;
}

.list-item-checkbox{
  display: flex;
  align-items: center;
}

.list-item image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 10rpx;
  background: #dfdfdf;
  margin-left: 24rpx;
}

.list-item text {
  margin-left: 16rpx;
}

.btn{
  width: 280rpx;
  height: 112rpx;
  background: #f7c429;
  border-radius: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 80rpx auto;
}

.btn-text{
  margin-left: 15rpx;
}
